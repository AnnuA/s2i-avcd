[Unit]
Description=Avocado appmanager service
After=network.target
#StartLimitInterval=0

[Service]
Type=simple
Restart=always
RestartSec=10

##allow maximum of 100 restarts with 10 sec interval for 1200 seconds duration,  after that it give up
StartLimitInterval=1200
StartLimitBurst=100
User=avocado
ExecStart=/usr/avcd/bin/appmanager

[Install]
WantedBy=multi-user.target

